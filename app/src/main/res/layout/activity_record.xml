<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sarjsheff.egor.cultivatoroverseer.RecordActivity" android:background="@drawable/ground">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/background_floating_material_dark"
            android:weightSum="1" android:layout_margin="5dp">
        <Chronometer
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chronometer" android:layout_gravity="center_horizontal"
                android:textSize="@dimen/chronometer" android:layout_marginTop="60dp"
                android:layout_marginBottom="30dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_record" android:layout_gravity="center_horizontal"
                    android:src="@drawable/start" android:layout_marginRight="5dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stop_record" android:src="@drawable/stop"
                    android:layout_gravity="center_horizontal" android:layout_marginRight="5dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/save" android:src="@drawable/save"/>
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp">
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:id="@+id/recordHelp" android:layout_gravity="right|bottom" android:textSize="30dp"
                    android:textColor="@color/help"/>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
