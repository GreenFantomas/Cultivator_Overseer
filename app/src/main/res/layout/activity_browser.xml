<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sarjsheff.egor.cultivatoroverseer.BrowserActivity" style="@style/foreground">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" style="@style/parent">
        <WebView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Browser" android:layout_gravity="center_horizontal" android:layout_weight="3"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt;--"
                    android:id="@+id/back" android:layout_weight="1" android:textSize="@dimen/browserNavigator"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reload"
                    android:id="@+id/reload" android:layout_weight="1" android:layout_margin="-10dp"
                    android:textSize="@dimen/browserNavigator"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-->"
                    android:id="@+id/forward" android:layout_weight="1" android:textSize="@dimen/browserNavigator"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
